{
    "openapi": "3.0.0",
    "info": {
        "title": "RentX Documentation",
        "description": "This is an API Rent",
        "version": "1.0.0",
        "contact": {
            "email": "samueldev1997@gmail.com"
        }
    },
    "paths": {
        "/sessions": {
            "post": {
                "tags": [
                    "Session"
                ],
                "summary": "Authentication user",
                "description": "Authentication user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "email": "spa@gmail.com",
                                "password": "1244"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Email or password Incorrect"
                    }
                }
            }
        },
        "/categories": {
            "post": {
                "tags": [
                    "Category"
                ],
                "summary": "Create a category",
                "description": "Create new Category",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Categories",
                                "example": {
                                    "name": "Category example",
                                    "description": "Category description simple"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Category already exists"
                    }
                }
            },
            "get": {
                "tags": [
                    "Category"
                ],
                "summary": "List All Category",
                "description": "List all  cartegory Route",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Categories"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/import": {
            "post": {
                "tags": [
                    "Category"
                ],
                "summary": "Upload a Category",
                "description": "Upload a new list Category",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Category already exists!"
                    }
                }
            }
        },
        "/specifications": {
            "post": {
                "tags": [
                    "Specifications"
                ],
                "summary": "Create a specifications",
                "description": "Create a new specifications",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Specifications"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "created"
                    },
                    "500": {
                        "description": "Specifications already exists!"
                    }
                }
            }
        },
        "/cars": {
            "post": {
                "tags": [
                    "Cars"
                ],
                "summary": "Create a new Car",
                "description": "This endpoint allow  to create a new  Car",
                "security": [
                    {
                        "bearerAuth":[]
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref":"#components/schemas/Cars"
                            },
                            "example": {
                                "name": "Toyota de exemplo",
                                "description": "Carro de exemplo",
                                "fine_amount": 200,
                                "category_id": "e6f15036-ba69-4a1f-b111-46c8be5da7af",
                                "daily_rate": 100,
                                "license_plate": "abc_125",
                                "brand": "Corola exemplo "
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "Specifications": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "descriptions": {
                        "type": "string"
                    }
                }
            },
            "Categories": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },

            "Cars": {
                "type":  "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "fine_amount": {
                        "type": "number"
                    },
                    "category_id": {
                        "type": "string"
                    },
                    "daily_rate": {
                        "type": "number"
                    },
                    "license_plate": {
                        "type": "string"
                    },
                    "brand": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
